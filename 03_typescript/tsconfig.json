{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"rootDir": "src/typescript",
		"outDir": "dist/",
		"noEmitOnError": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"lib": ["ES6", "ES2017", "ES2021"],
	},
	"exclude": ["test"]
}